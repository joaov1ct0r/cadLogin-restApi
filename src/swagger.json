{
  "openapi": "3.0.0",
  "info": {
    "title": "Social Media JWT Rest Api",
    "description": "API rest de media social para cadastro e login de usuarios, e criação de posts",
    "contact": {
      "linkedin": "https://www.linkedin.com/in/joaov1ct0r/"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/api/users/register": {
      "post": {
        "summary": "Cadastro de usuarios",
        "description": "Rota para cadastro de novos usuarios",
        "tags": ["User"],
        "security": [{ "bearerAuth": []}] ,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@mail.com",
                    "name": "user sobrenome",
                    "bornAt": "28/06/2022",
                    "password": "senha1234"
                  }
                }
              }
            }
          }
        }
      },
      "responses": {
        "500": {
          "description": "Internal Server Error"
        },
        "400": {
          "description": "Bad Request"
        },
        "201": {
          "description": "Created",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#components/schemas/User"
              }
            }
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "summary": "Login de usuarios",
        "description": "Rota para Login de usuarios",
        "tags": ["User"],
        "security": [{ "bearerAuth": []}] ,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@mail.com",
                    "password": "senha1234"
                  }
                }
              }
            }
          }
        }
      },
      "responses": {
        "500": {
          "description": "Internal Server Error"
        },
        "404": {
          "description": "Not Found"
        },
        "401": {
          "description": "Unathorized"
        },
        "400": {
          "description": "Bad Request"
        },
        "200": {
          "description": "Ok"
        }
      }
    },
    "/api/users/edit": {
      "put": {
        "summary": "Edição de usuarios",
        "description": "Rota para editar dados de usuarios cadastrados",
        "tags": ["User"],
        "security": [{ "bearerAuth": []}] ,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@mail.com",
                    "name": "user sobrenome",
                    "bornAt": "28/06/2022",
                    "password": "senha1234"
                  }
                }
              }
            }
          }
        }
      },
      "responses": {
        "500": {
          "description": "Internal Server Error"
        },
        "401": {
          "description": "Unathorized"
        },
        "400": {
          "description": "Bad Request"
        },
        "204": {
          "description": "No Content"
        }
      }
    },
    "/api/users/delete": {
      "delete": {
        "summary": "Exclusão de usuarios",
        "description": "Rota para deletar usuarios cadastrados",
        "tags": ["User"],
        "security": [{ "bearerAuth": []}] ,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {}
                }
              }
            }
          }
        }
      },
      "responses": {
        "500": {
          "description": "Internal Server Error"
        },
        "401": {
          "description": "Unathorized"
        },
        "400": {
          "description": "Bad Request"
        },
        "204": {
          "description": "No Content"
        }
      }
    },
    "/api/users/user": {
      "get": {
        "summary": "Visualização de usuario",
        "description": "Rota para visualizar usuario cadastrado",
        "tags": ["User"],
        "security": [{ "bearerAuth": []}] ,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@mail.com"
                  }
                }
              }
            }
          }
        }
      },
      "responses": {
        "500": {
          "description": "Internal Server Error"
        },
        "404": {
          "description": "Not Found"
        },
        "401": {
          "description": "Unathorized"
        },
        "400": {
          "description": "Bad Request"
        },
        "200": {
          "description": "Ok"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "bornAt": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
